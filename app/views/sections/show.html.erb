<%= link_to("<< Back to list",{:action => 'index'}, :class => 'back-link') %>
<div class="section show">
<h2>Show Section </h2>
  <table summary="Section detail  view">
    <tr>
      <th>Page Id</th>
        <td><%= @section.page_id %></td>
    </tr>
    <tr>
      <th>Name</th>
        <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
        <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
        <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Content Type</th>
        <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
        <td><%= @section.content %></td>
    </tr>
  </table>
</div>  

    