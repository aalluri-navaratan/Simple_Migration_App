<% subjects ||= [] %>
<ul>
<% subjects.each do |subject| %>
  <li>
    <%= subject.name %>
    <ul>
      <% subject.pages.visible.sorted.each do |page| %>
        <li> <%= link_to_unless_current(page.name,{ :action => "show", 
          :permalink =>  page.permaink }) %></li>
      <% end %>
      </ul>
    </li>
    <% end %>
  </ul>