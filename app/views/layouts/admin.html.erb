      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <%  end %>
      <div id="content">
        <%= yield %>
      </div>
</div>
<!-- after yield -->
<div id="footer">
  <p id="copyright">&copy; navartan.com /anil</p>
</div>
</body>
</html>
