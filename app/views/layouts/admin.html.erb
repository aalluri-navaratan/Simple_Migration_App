<html>
<head>
  <title>Simple CMS | <%= @page_title || "admin" %></title>
      <%= stylesheet_link_tag('application', :midea => 'all') %>
</head>
<body>
  <div id="header">
    <h1>Simple CMS Admin</h1>
  </div>
<!-- before yield -->
<div id="main">
